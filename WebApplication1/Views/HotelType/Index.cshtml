@model IEnumerable<WebApplication1.Models.HotelType>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<br />
<br />
<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table table-hover table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HotelTypeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HotelTypeName)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.HotelTypeId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HotelTypeName)
                </td>
                <td>
                    <a asp-controller="HotelType" asp-action="Detail" asp-route-id="@item.HotelTypeId" class="btn btn-primary">Details</a>
                    <a asp-controller="HotelType" asp-action="Edit" asp-route-id="@item.HotelTypeId" class="btn btn-success">Edit</a>
                    <a asp-controller="HotelType" asp-action="Delete" asp-route-id="@item.HotelTypeId" class="btn btn-primary">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
