@model WebApplication1.Models.RoomFacility

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br/>
<br/>
<br/>
<h4>RoomFacility</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoomFacilityId" class="control-label"></label>
                <input asp-for="RoomFacilityId" class="form-control" />
                <span asp-validation-for="RoomFacilityId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsAvilable" /> @Html.DisplayNameFor(model => model.IsAvilable)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Wifi" /> @Html.DisplayNameFor(model => model.Wifi)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="AirConditioner" /> @Html.DisplayNameFor(model => model.AirConditioner)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Ekettle" /> @Html.DisplayNameFor(model => model.Ekettle)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Refrigerator" /> @Html.DisplayNameFor(model => model.Refrigerator)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="RoomFacilityDescription" class="control-label"></label>
                <input asp-for="RoomFacilityDescription" class="form-control" />
                <span asp-validation-for="RoomFacilityDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoomId" class="control-label"></label>
                <input asp-for="RoomId" class="form-control" />
                <span asp-validation-for="RoomId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input class="btn btn-primary" type="submit" value="Save"  />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-action="Index">Back to List</a>
</div>

